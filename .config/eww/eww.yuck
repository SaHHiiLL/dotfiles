(defwidget greeter [?text name]
    (box    :orientation "horizontal"
            :halign "center"
    text
    (button :onclick "notify-send 'Hello' 'Hello, ${name}'" "Greet")))

(defwindow example
    :monitor 0
    :geometry (geometry :x "0%"
                        :y "0%"
                        :width "100%"
                        :height "5%"
                        :anchor "top center")
    :stacking "overlay"
    :exclusive true
    (greeter    :name "Sahil"))

